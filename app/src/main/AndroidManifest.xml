<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Mic permission required for SpeechRecognizer -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- Make the app visible to system Speech Recognition services (e.g., Whisper+) -->
    <queries>
        <intent>
            <!-- FIXED: use RecognitionService instead of RecognitionListener -->
            <action android:name="android.speech.RecognitionService" />
        </intent>

        <!-- Some OEMs/tools still rely on MAIN visibility; harmless to keep -->
        <intent>
            <action android:name="android.intent.action.MAIN" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:enableOnBackInvokedCallback="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:memtagMode="async"
        android:supportsRtl="true"
        tools:targetApi="34">

        <!-- Your own recognition service (kept as-is).
             Using Whisper+ as the system engine does not require removing this. -->
        <service
            android:name=".recognitionservice.MainRecognitionService"
            android:exported="true"
            android:foregroundServiceType="microphone"
            android:label="Transcribro Speech Recognition Service"
            android:permission="android.permission.RECORD_AUDIO">
            <intent-filter>
                <action android:name="android.speech.RecognitionService" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data
                android:name="android.speech"
                android:resource="@xml/recognition_service" />
        </service>

        <!-- Your IME (kept as-is) -->
        <service
            android:name=".ui.voiceinput.VoiceInput"
            android:exported="true"
            android:permission="android.permission.BIND_INPUT_METHOD">
            <intent-filter>
                <action android:name="android.view.InputMethod" />
            </intent-filter>
            <meta-data
                android:name="android.view.im"
                android:resource="@xml/input_method" />
        </service>

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Transcribro">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.APPLICATION_PREFERENCES" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.action_recognize_speech.ActionRecognizeSpeechActivity"
            android:exported="true"
            android:theme="@style/Theme.FloatingWindow">
            <intent-filter>
                <action android:name="android.speech.action.RECOGNIZE_SPEECH" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>
